{
  "module_name": "pulse_reg_example",
  "data_width": 32,
  "addr_width": 8,
  "num_write_ports": 1,
  "num_read_ports": 1,
  "sync_reset": false,
  "reset_value": "0x00000000",
  "byte_enable": true,
  "registers": [
    {
      "name": "CTRL_REG",
      "address": "0x00",
      "type": "ReadWrite",
      "reset_value": "0x00000000",
      "description": "控制寄存器"
    },
    {
      "name": "STATUS_REG",
      "address": "0x04",
      "type": "ReadOnly",
      "reset_value": "0x00000000",
      "description": "状态寄存器"
    },
    {
      "name": "TRIGGER_REG",
      "address": "0x08",
      "type": "Write1Pulse",
      "reset_value": "0x00000000",
      "description": "触发寄存器 - 写1产生脉冲"
    },
    {
      "name": "CLEAR_REG",
      "address": "0x0C",
      "type": "Write0Pulse",
      "reset_value": "0x00000000",
      "description": "清除寄存器 - 写0产生脉冲"
    }
  ],
  "fields": [
    {
      "register": "CTRL_REG",
      "name": "ENABLE",
      "bit_range": "0",
      "description": "使能位"
    },
    {
      "register": "CTRL_REG",
      "name": "MODE",
      "bit_range": "2:1",
      "description": "模式设置"
    },
    {
      "register": "STATUS_REG",
      "name": "BUSY",
      "bit_range": "0",
      "description": "忙标志"
    },
    {
      "register": "STATUS_REG",
      "name": "ERROR",
      "bit_range": "1",
      "description": "错误标志"
    },
    {
      "register": "TRIGGER_REG",
      "name": "START",
      "bit_range": "0",
      "description": "启动脉冲"
    },
    {
      "register": "TRIGGER_REG",
      "name": "RESET",
      "bit_range": "1",
      "description": "复位脉冲"
    },
    {
      "register": "CLEAR_REG",
      "name": "CLR_ERR",
      "bit_range": "0",
      "description": "清除错误脉冲"
    },
    {
      "register": "CLEAR_REG",
      "name": "CLR_BUSY",
      "bit_range": "1",
      "description": "清除忙状态脉冲"
    }
  ]
} 