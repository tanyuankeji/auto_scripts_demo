{
  "module_name": "multi_block_example",
  "data_width": 32,
  "addr_width": 12,
  "num_write_ports": 1,
  "num_read_ports": 1,
  "sync_reset": false,
  "reset_value": "0x00000000",
  "byte_enable": true,
  "auto_address": true,
  "address_blocks": [
    {
      "name": "CONTROL",
      "base_address": "0x000",
      "size": 256,
      "description": "控制模块寄存器"
    },
    {
      "name": "STATUS",
      "base_address": "0x100",
      "size": 256,
      "description": "状态模块寄存器"
    },
    {
      "name": "CONFIG",
      "base_address": "0x200",
      "size": 256,
      "description": "配置模块寄存器"
    }
  ],
  "registers": [
    {
      "name": "CTRL_REG",
      "block": "CONTROL",
      "type": "ReadWrite",
      "reset_value": "0x00000000",
      "description": "控制寄存器"
    },
    {
      "name": "CMD_REG",
      "block": "CONTROL",
      "type": "WriteOnly",
      "reset_value": "0x00000000",
      "description": "命令寄存器"
    },
    {
      "name": "INTR_ENABLE_REG",
      "block": "CONTROL",
      "type": "ReadWrite",
      "reset_value": "0x00000000",
      "description": "中断使能寄存器"
    },
    {
      "name": "STATUS_REG",
      "block": "STATUS",
      "type": "ReadOnly",
      "reset_value": "0x00000000",
      "description": "状态寄存器"
    },
    {
      "name": "INTR_STATUS_REG",
      "block": "STATUS",
      "type": "Write1Clear",
      "reset_value": "0x00000000",
      "description": "中断状态寄存器"
    },
    {
      "name": "ERROR_REG",
      "block": "STATUS",
      "type": "ReadOnly",
      "reset_value": "0x00000000",
      "description": "错误寄存器"
    },
    {
      "name": "CONFIG1_REG",
      "block": "CONFIG",
      "type": "ReadWrite",
      "reset_value": "0x00000000",
      "description": "配置寄存器1"
    },
    {
      "name": "CONFIG2_REG",
      "block": "CONFIG",
      "type": "ReadWrite",
      "reset_value": "0x00000000",
      "description": "配置寄存器2"
    },
    {
      "name": "VERSION_REG",
      "block": "CONFIG",
      "type": "ReadOnly",
      "reset_value": "0x00010000",
      "description": "版本寄存器"
    }
  ],
  "fields": [
    {
      "register": "CTRL_REG",
      "name": "ENABLE",
      "bit_range": "0",
      "description": "使能位"
    },
    {
      "register": "CTRL_REG",
      "name": "MODE",
      "bit_range": "2:1",
      "description": "模式设置"
    },
    {
      "register": "CMD_REG",
      "name": "START",
      "bit_range": "0",
      "description": "启动命令"
    },
    {
      "register": "CMD_REG",
      "name": "RESET",
      "bit_range": "1",
      "description": "复位命令"
    },
    {
      "register": "INTR_ENABLE_REG",
      "name": "DONE_EN",
      "bit_range": "0",
      "description": "完成中断使能"
    },
    {
      "register": "INTR_ENABLE_REG",
      "name": "ERROR_EN",
      "bit_range": "1",
      "description": "错误中断使能"
    },
    {
      "register": "STATUS_REG",
      "name": "BUSY",
      "bit_range": "0",
      "description": "忙标志"
    },
    {
      "register": "STATUS_REG",
      "name": "DONE",
      "bit_range": "1",
      "description": "完成标志"
    },
    {
      "register": "INTR_STATUS_REG",
      "name": "DONE_INTR",
      "bit_range": "0",
      "description": "完成中断"
    },
    {
      "register": "INTR_STATUS_REG",
      "name": "ERROR_INTR",
      "bit_range": "1",
      "description": "错误中断"
    },
    {
      "register": "ERROR_REG",
      "name": "ERROR_CODE",
      "bit_range": "7:0",
      "description": "错误代码"
    },
    {
      "register": "CONFIG1_REG",
      "name": "TIMEOUT",
      "bit_range": "15:0",
      "description": "超时设置"
    },
    {
      "register": "CONFIG2_REG",
      "name": "CLK_DIV",
      "bit_range": "7:0",
      "description": "时钟分频设置"
    },
    {
      "register": "VERSION_REG",
      "name": "MAJOR",
      "bit_range": "15:8",
      "description": "主版本号"
    },
    {
      "register": "VERSION_REG",
      "name": "MINOR",
      "bit_range": "7:0",
      "description": "次版本号"
    }
  ]
} 