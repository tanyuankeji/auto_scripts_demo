{
    "module_name": "axi_lite_example",
    "data_width": 32,
    "addr_width": 12,
    "bus_protocol": "axi_lite",
    "registers": [
        {
            "name": "CTRL_REG",
            "address": "0x000",
            "type": "ReadWrite",
            "reset_value": "0x00000000",
            "description": "控制寄存器",
            "fields": [
                {
                    "name": "ENABLE",
                    "bits": "0",
                    "description": "全局使能信号"
                },
                {
                    "name": "START",
                    "bits": "1",
                    "description": "启动操作"
                },
                {
                    "name": "CONTINUE",
                    "bits": "2",
                    "description": "继续操作"
                },
                {
                    "name": "ABORT",
                    "bits": "3",
                    "description": "终止操作"
                },
                {
                    "name": "MODE",
                    "bits": "5:4",
                    "description": "工作模式选择：00=正常, 01=测试, 10=诊断, 11=保留"
                },
                {
                    "name": "CLOCK_DIV",
                    "bits": "15:8",
                    "description": "时钟分频器设置"
                },
                {
                    "name": "RESERVED",
                    "bits": "31:16",
                    "description": "保留位"
                }
            ]
        },
        {
            "name": "STATUS_REG",
            "address": "0x004",
            "type": "ReadOnly",
            "reset_value": "0x00000000",
            "description": "状态寄存器",
            "fields": [
                {
                    "name": "BUSY",
                    "bits": "0",
                    "description": "忙状态标志"
                },
                {
                    "name": "DONE",
                    "bits": "1",
                    "description": "完成标志"
                },
                {
                    "name": "ERROR",
                    "bits": "2",
                    "description": "错误标志"
                },
                {
                    "name": "OVERFLOW",
                    "bits": "3",
                    "description": "溢出标志"
                },
                {
                    "name": "UNDERFLOW",
                    "bits": "4",
                    "description": "下溢标志"
                },
                {
                    "name": "STATE",
                    "bits": "7:5",
                    "description": "当前状态机状态"
                },
                {
                    "name": "TX_FIFO_LEVEL",
                    "bits": "15:8",
                    "description": "发送FIFO水位"
                },
                {
                    "name": "RX_FIFO_LEVEL",
                    "bits": "23:16",
                    "description": "接收FIFO水位"
                },
                {
                    "name": "RESERVED",
                    "bits": "31:24",
                    "description": "保留位"
                }
            ]
        },
        {
            "name": "INTR_ENABLE_REG",
            "address": "0x008",
            "type": "ReadWrite",
            "reset_value": "0x00000000",
            "description": "中断使能寄存器",
            "fields": [
                {
                    "name": "DONE_IE",
                    "bits": "0",
                    "description": "完成中断使能"
                },
                {
                    "name": "ERROR_IE",
                    "bits": "1",
                    "description": "错误中断使能"
                },
                {
                    "name": "OVERFLOW_IE",
                    "bits": "2",
                    "description": "溢出中断使能"
                },
                {
                    "name": "UNDERFLOW_IE",
                    "bits": "3",
                    "description": "下溢中断使能"
                },
                {
                    "name": "TX_FIFO_HALF_IE",
                    "bits": "4",
                    "description": "发送FIFO半满中断使能"
                },
                {
                    "name": "RX_FIFO_HALF_IE",
                    "bits": "5",
                    "description": "接收FIFO半满中断使能"
                },
                {
                    "name": "RESERVED",
                    "bits": "31:6",
                    "description": "保留位"
                }
            ]
        },
        {
            "name": "INTR_STATUS_REG",
            "address": "0x00C",
            "type": "Write1Clean",
            "reset_value": "0x00000000",
            "description": "中断状态寄存器（写1清零）",
            "fields": [
                {
                    "name": "DONE_INT",
                    "bits": "0",
                    "description": "完成中断状态"
                },
                {
                    "name": "ERROR_INT",
                    "bits": "1",
                    "description": "错误中断状态"
                },
                {
                    "name": "OVERFLOW_INT",
                    "bits": "2",
                    "description": "溢出中断状态"
                },
                {
                    "name": "UNDERFLOW_INT",
                    "bits": "3",
                    "description": "下溢中断状态"
                },
                {
                    "name": "TX_FIFO_HALF_INT",
                    "bits": "4",
                    "description": "发送FIFO半满中断状态"
                },
                {
                    "name": "RX_FIFO_HALF_INT",
                    "bits": "5",
                    "description": "接收FIFO半满中断状态"
                },
                {
                    "name": "RESERVED",
                    "bits": "31:6",
                    "description": "保留位"
                }
            ]
        },
        {
            "name": "TX_DATA_REG",
            "address": "0x010",
            "type": "WriteOnly",
            "reset_value": "0x00000000",
            "description": "发送数据寄存器（写入FIFO）",
            "fields": [
                {
                    "name": "TX_DATA",
                    "bits": "31:0",
                    "description": "发送数据"
                }
            ]
        },
        {
            "name": "RX_DATA_REG",
            "address": "0x014",
            "type": "ReadOnly",
            "reset_value": "0x00000000",
            "description": "接收数据寄存器（从FIFO读取）",
            "fields": [
                {
                    "name": "RX_DATA",
                    "bits": "31:0",
                    "description": "接收数据"
                }
            ]
        },
        {
            "name": "CONFIG1_REG",
            "address": "0x018",
            "type": "ReadWrite",
            "locked_by": [
                "CTRL_REG"
            ],
            "reset_value": "0x00000000",
            "description": "配置寄存器1（当CTRL_REG.ENABLE=1时锁定）",
            "fields": [
                {
                    "name": "TIMEOUT",
                    "bits": "15:0",
                    "description": "超时值"
                },
                {
                    "name": "RETRY_COUNT",
                    "bits": "23:16",
                    "description": "重试次数"
                },
                {
                    "name": "PROTOCOL",
                    "bits": "25:24",
                    "description": "通信协议选择"
                },
                {
                    "name": "RESERVED",
                    "bits": "31:26",
                    "description": "保留位"
                }
            ]
        },
        {
            "name": "CONFIG2_REG",
            "address": "0x01C",
            "type": "ReadWrite",
            "locked_by": [
                "CTRL_REG"
            ],
            "reset_value": "0x00000000",
            "description": "配置寄存器2（当CTRL_REG.ENABLE=1时锁定）",
            "fields": [
                {
                    "name": "TX_FIFO_THRESHOLD",
                    "bits": "7:0",
                    "description": "发送FIFO阈值"
                },
                {
                    "name": "RX_FIFO_THRESHOLD",
                    "bits": "15:8",
                    "description": "接收FIFO阈值"
                },
                {
                    "name": "DMA_BURST_SIZE",
                    "bits": "23:16",
                    "description": "DMA突发大小"
                },
                {
                    "name": "RESERVED",
                    "bits": "31:24",
                    "description": "保留位"
                }
            ]
        },
        {
            "name": "TRIGGER_REG",
            "address": "0x020",
            "type": "Write1Pulse",
            "reset_value": "0x00000000",
            "description": "触发寄存器（写1产生脉冲）",
            "fields": [
                {
                    "name": "RESET_TX_FIFO",
                    "bits": "0",
                    "description": "重置发送FIFO"
                },
                {
                    "name": "RESET_RX_FIFO",
                    "bits": "1",
                    "description": "重置接收FIFO"
                },
                {
                    "name": "START_DMA_TX",
                    "bits": "2",
                    "description": "启动DMA发送"
                },
                {
                    "name": "START_DMA_RX",
                    "bits": "3",
                    "description": "启动DMA接收"
                },
                {
                    "name": "FORCE_CALIBRATION",
                    "bits": "4",
                    "description": "强制校准"
                },
                {
                    "name": "RESERVED",
                    "bits": "31:5",
                    "description": "保留位"
                }
            ]
        },
        {
            "name": "ERROR_CODE_REG",
            "address": "0x024",
            "type": "ReadClean",
            "reset_value": "0x00000000",
            "description": "错误码寄存器（读取后自动清零）",
            "fields": [
                {
                    "name": "ERROR_CODE",
                    "bits": "7:0",
                    "description": "错误码"
                },
                {
                    "name": "ERROR_SOURCE",
                    "bits": "15:8",
                    "description": "错误源"
                },
                {
                    "name": "ERROR_TIMESTAMP",
                    "bits": "31:16",
                    "description": "错误时间戳"
                }
            ]
        },
        {
            "name": "VERSION_REG",
            "address": "0x100",
            "type": "ReadOnly",
            "reset_value": "0x00020001",
            "description": "版本信息寄存器",
            "fields": [
                {
                    "name": "MINOR",
                    "bits": "7:0",
                    "description": "次版本号"
                },
                {
                    "name": "MAJOR",
                    "bits": "15:8",
                    "description": "主版本号"
                },
                {
                    "name": "PATCH",
                    "bits": "23:16",
                    "description": "补丁版本号"
                },
                {
                    "name": "REV",
                    "bits": "31:24",
                    "description": "修订号"
                }
            ]
        },
        {
            "name": "ID_REG",
            "address": "0x104",
            "type": "ReadOnly",
            "reset_value": "0xABCD1234",
            "description": "标识符寄存器",
            "fields": [
                {
                    "name": "MODULE_ID",
                    "bits": "31:0",
                    "description": "模块ID"
                }
            ]
        }
    ]
}