{
  "module_name": "bus_options_example",
  "data_width": 32,
  "addr_width": 8,
  "bus_protocol": "wishbone",
  
  "bus_options": {
    "common": {
      "timeout": {
        "enable": true,
        "cycles": 16,
        "action": "error"
      },
      "error_handling": {
        "response": "error",
        "reporting": true
      }
    },
    
    "wishbone": {
      "classic_cycle": true,
      "delay": {
        "read": 2,
        "write": 1,
        "response": 0
      }
    },
    
    "axi_lite": {
      "write_strobes": true,
      "delay": {
        "read": 1,
        "write": 1,
        "response": 2
      }
    },
    
    "apb": {
      "delay": {
        "read": 0,
        "write": 0,
        "response": 1
      }
    },
    
    "ocp": {
      "timeout": {
        "enable": true,
        "cycles": 32,
        "action": "interrupt"
      }
    }
  },
  
  "registers": [
    {
      "name": "CONTROL_REG",
      "address": "0x00",
      "type": "ReadWrite",
      "reset_value": "0x00000000",
      "description": "控制寄存器",
      "fields": [
        {
          "name": "ENABLE",
          "bits": "0",
          "description": "全局使能",
          "output": "enable_signal"
        },
        {
          "name": "START",
          "bits": "1",
          "description": "启动操作"
        },
        {
          "name": "STOP",
          "bits": "2",
          "description": "停止操作"
        },
        {
          "name": "RESET",
          "bits": "3",
          "description": "复位系统"
        },
        {
          "name": "MODE",
          "bits": "5-4",
          "description": "操作模式"
        },
        {
          "name": "INT_EN",
          "bits": "8",
          "description": "中断使能"
        },
        {
          "name": "LOCK_CONFIG",
          "bits": "16",
          "description": "锁定配置"
        }
      ]
    },
    
    {
      "name": "STATUS_REG",
      "address": "0x04",
      "type": "ReadOnly",
      "reset_value": "0x00000000",
      "description": "状态寄存器",
      "fields": [
        {
          "name": "BUSY",
          "bits": "0",
          "description": "忙状态",
          "input": "busy_signal"
        },
        {
          "name": "DONE",
          "bits": "1",
          "description": "完成状态",
          "input": "done_signal"
        },
        {
          "name": "ERROR",
          "bits": "2",
          "description": "错误状态",
          "input": "error_signal"
        },
        {
          "name": "TIMEOUT",
          "bits": "3",
          "description": "超时状态",
          "input": "timeout_signal"
        }
      ]
    },
    
    {
      "name": "CONFIG_REG",
      "address": "0x08",
      "type": "ReadWrite",
      "reset_value": "0x00000000",
      "description": "配置寄存器",
      "locked_by": ["CONTROL_REG"],
      "lock_condition": "16",
      "fields": [
        {
          "name": "CLOCK_DIV",
          "bits": "7-0",
          "description": "时钟分频系数"
        },
        {
          "name": "DATA_WIDTH",
          "bits": "13-8",
          "description": "数据宽度设置"
        },
        {
          "name": "TIMEOUT_VAL",
          "bits": "23-16",
          "description": "超时值设置"
        },
        {
          "name": "RETRY_COUNT",
          "bits": "31-24",
          "description": "重试次数设置"
        }
      ]
    },
    
    {
      "name": "INTERRUPT_REG",
      "address": "0x0C",
      "type": "Write1Clear",
      "reset_value": "0x00000000",
      "description": "中断状态寄存器",
      "fields": [
        {
          "name": "DATA_READY",
          "bits": "0",
          "description": "数据就绪中断"
        },
        {
          "name": "ERROR_INT",
          "bits": "1",
          "description": "错误中断"
        },
        {
          "name": "TIMEOUT_INT",
          "bits": "2",
          "description": "超时中断"
        },
        {
          "name": "OVERFLOW_INT",
          "bits": "3",
          "description": "溢出中断"
        }
      ]
    },
    
    {
      "name": "TRIGGER_REG",
      "address": "0x10",
      "type": "Write1Pulse",
      "reset_value": "0x00000000",
      "description": "触发寄存器",
      "fields": [
        {
          "name": "SOFT_RESET",
          "bits": "0",
          "description": "软复位触发"
        },
        {
          "name": "START_CONV",
          "bits": "1",
          "description": "启动转换触发"
        },
        {
          "name": "ABORT",
          "bits": "2",
          "description": "中止操作触发"
        }
      ]
    },
    
    {
      "name": "VERSION_REG",
      "address": "0x14",
      "type": "ReadOnly",
      "reset_value": "0x00010200",
      "description": "版本寄存器"
    }
  ]
} 