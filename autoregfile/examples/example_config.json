{
  "module_name": "test_regfile",
  "data_width": 32,
  "addr_width": 8,
  "num_write_ports": 1,
  "num_read_ports": 1,
  "sync_reset": false,
  "byte_enable": true,
  "registers": [
    {
      "name": "CTRL_REG",
      "address": "0x00",
      "type": "ReadWrite",
      "reset_value": "0x00000000",
      "description": "控制寄存器"
    },
    {
      "name": "STATUS_REG",
      "address": "0x04",
      "type": "ReadOnly",
      "reset_value": "0x00000000",
      "description": "状态寄存器"
    },
    {
      "name": "INT_EN_REG",
      "address": "0x08",
      "type": "ReadWrite",
      "reset_value": "0x00000000",
      "description": "中断使能寄存器"
    },
    {
      "name": "INT_STATUS_REG",
      "address": "0x0C",
      "type": "Write1Clean",
      "reset_value": "0x00000000",
      "description": "中断状态寄存器，写1清零"
    },
    {
      "name": "VERSION_REG",
      "address": "0x10",
      "type": "ReadOnly",
      "reset_value": "0x00010000",
      "description": "版本寄存器"
    },
    {
      "name": "CONFIG_REG",
      "address": "0x14",
      "type": "WriteOnce",
      "reset_value": "0x00000000",
      "description": "配置寄存器，只能写入一次"
    }
  ],
  "fields": [
    {
      "register": "CTRL_REG",
      "name": "ENABLE",
      "bit_range": "0",
      "description": "模块使能，1=启用，0=禁用"
    },
    {
      "register": "CTRL_REG",
      "name": "MODE",
      "bit_range": "2:1",
      "description": "工作模式: 00=正常, 01=低功耗, 10=测试, 11=保留"
    },
    {
      "register": "CTRL_REG",
      "name": "RESET",
      "bit_range": "3",
      "description": "软件复位位，写1触发复位"
    },
    {
      "register": "STATUS_REG",
      "name": "BUSY",
      "bit_range": "0",
      "description": "忙状态指示，1=忙，0=空闲"
    },
    {
      "register": "STATUS_REG",
      "name": "ERROR",
      "bit_range": "1",
      "description": "错误指示，1=错误，0=正常"
    },
    {
      "register": "STATUS_REG",
      "name": "STATE",
      "bit_range": "5:2",
      "description": "当前状态"
    },
    {
      "register": "INT_EN_REG",
      "name": "DATA_READY_EN",
      "bit_range": "0",
      "description": "数据就绪中断使能"
    },
    {
      "register": "INT_EN_REG",
      "name": "ERROR_EN",
      "bit_range": "1",
      "description": "错误中断使能"
    },
    {
      "register": "INT_EN_REG",
      "name": "TIMEOUT_EN",
      "bit_range": "2",
      "description": "超时中断使能"
    },
    {
      "register": "INT_STATUS_REG",
      "name": "DATA_READY",
      "bit_range": "0",
      "description": "数据就绪中断状态"
    },
    {
      "register": "INT_STATUS_REG",
      "name": "ERROR",
      "bit_range": "1",
      "description": "错误中断状态"
    },
    {
      "register": "INT_STATUS_REG",
      "name": "TIMEOUT",
      "bit_range": "2",
      "description": "超时中断状态"
    },
    {
      "register": "VERSION_REG",
      "name": "MAJOR",
      "bit_range": "31:16",
      "description": "主版本号"
    },
    {
      "register": "VERSION_REG",
      "name": "MINOR",
      "bit_range": "15:0",
      "description": "次版本号"
    },
    {
      "register": "CONFIG_REG",
      "name": "DEVICE_ID",
      "bit_range": "7:0",
      "description": "设备ID"
    },
    {
      "register": "CONFIG_REG",
      "name": "FEATURES",
      "bit_range": "15:8",
      "description": "特性配置"
    }
  ]
} 