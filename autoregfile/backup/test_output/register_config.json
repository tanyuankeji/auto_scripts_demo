{
    "module_name": "custom_regfile",
    "data_width": 32,
    "addr_width": 8,
    "num_write_ports": 1,
    "num_read_ports": 2,
    "sync_reset": false,
    "reset_value": "0",
    "byte_enable": true,
    "implementation": "instance",
    "default_reg_type": "ReadWrite",
    
    "registers": [
        {
            "name": "CTRL_REG",
            "address": "0x00",
            "width": 32,
            "type": "ReadWrite",
            "reset_value": "0x00000000",
            "description": "控制寄存器"
        },
        {
            "name": "STATUS_REG",
            "address": "0x04",
            "width": 32,
            "type": "ReadOnly",
            "reset_value": "0x00000000",
            "description": "状态寄存器"
        },
        {
            "name": "INT_FLAGS",
            "address": "0x08",
            "width": 32,
            "type": "ReadClean",
            "reset_value": "0x00000000",
            "description": "中断标志寄存器，读取后自动清零"
        },
        {
            "name": "INT_ENABLE",
            "address": "0x0C",
            "width": 32,
            "type": "ReadWrite",
            "reset_value": "0x00000000",
            "description": "中断使能寄存器"
        },
        {
            "name": "TX_DATA",
            "address": "0x10",
            "width": 32,
            "type": "WriteOnly",
            "reset_value": "0x00000000",
            "description": "发送数据寄存器，只能写入"
        },
        {
            "name": "RX_DATA",
            "address": "0x14",
            "width": 32,
            "type": "ReadOnly",
            "reset_value": "0x00000000",
            "description": "接收数据寄存器，只能读取"
        },
        {
            "name": "CONFIG",
            "address": "0x18",
            "width": 32,
            "type": "ReadWrite",
            "reset_value": "0x00000001",
            "description": "配置寄存器"
        },
        {
            "name": "INT_CLEAR",
            "address": "0x1C",
            "width": 32,
            "type": "Write1Clean",
            "reset_value": "0x00000000",
            "description": "中断清除寄存器，写1清零中断标志"
        },
        {
            "name": "INT_SET",
            "address": "0x20",
            "width": 32,
            "type": "Write1Set",
            "reset_value": "0x00000000",
            "description": "中断设置寄存器，写1设置中断标志"
        },
        {
            "name": "LOCK_REG",
            "address": "0x24",
            "width": 32,
            "type": "WriteOnce",
            "reset_value": "0x00000000",
            "description": "锁定寄存器，只能写入一次"
        }
    ],
    
    "fields": [
        {
            "register": "CTRL_REG",
            "name": "ENABLE",
            "bit_range": "0",
            "type": "ReadWrite",
            "reset_value": "0",
            "description": "全局使能位"
        },
        {
            "register": "CTRL_REG",
            "name": "MODE",
            "bit_range": "2:1",
            "type": "ReadWrite",
            "reset_value": "0",
            "description": "工作模式"
        },
        {
            "register": "CTRL_REG",
            "name": "START",
            "bit_range": "3",
            "type": "ReadWrite",
            "reset_value": "0",
            "description": "开始传输"
        },
        {
            "register": "STATUS_REG",
            "name": "BUSY",
            "bit_range": "0",
            "type": "ReadOnly",
            "reset_value": "0",
            "description": "忙状态指示"
        },
        {
            "register": "STATUS_REG",
            "name": "ERROR",
            "bit_range": "1",
            "type": "ReadOnly",
            "reset_value": "0",
            "description": "错误状态指示"
        },
        {
            "register": "INT_FLAGS",
            "name": "TX_DONE",
            "bit_range": "0",
            "type": "ReadClean",
            "reset_value": "0",
            "description": "发送完成中断"
        },
        {
            "register": "INT_FLAGS",
            "name": "RX_DONE",
            "bit_range": "1",
            "type": "ReadClean",
            "reset_value": "0",
            "description": "接收完成中断"
        },
        {
            "register": "INT_FLAGS",
            "name": "ERROR",
            "bit_range": "2",
            "type": "ReadClean",
            "reset_value": "0",
            "description": "错误中断"
        }
    ]
} 